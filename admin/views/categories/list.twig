<header class="header flex items-center justify-between mb-6">
  <div class="header-left">
    <div class="back-next">
      <ul class="flex">
        <li>
          <button class="focus:outline-none">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
        </li>
        <li>
          <button class="focus:outline-none">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </li>
      </ul>
    </div>
  </div>
  <div class="header-right">
    <div class="user-action">
      <ul class="flex items-center">
        <li>
          <a class="block" href="javascript:void(0);">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
            </svg>
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>
<div class="dashboard">
  <div class="dashboard-header flex items-start justify-between" style="align-items: center;">
    <div class="dashborad-header-text">
      <h1>Kategoriler</h1>
      {# <p>Engin Admin Panel'e Hoşgeldin</p> #}
      {{ message|raw }}
    </div>
    <div class="dashboard-header-action">
      <div class="form-element">
        <a href="{{ base_url('admin/categories/create') }}" class="button-first focus:outline-none">Yeni Kategori</a>
      </div>
    </div>
  </div>
  <div class="table-list mt-6 w-full">
    <div class="table-list-header flex items-center justify-between">
      <div class="table-list-header-text">
        <h2>Kategori Listesi</h2>
        {# <p>Showing 1 to 10 of 57 entries</p> #}
      </div>
      <div class="table-list-header-input">
        <div class="form-group">
          <div class="form-element">
            <input type="text" placeholder="Search in list">
          </div>
        </div>
      </div>
    </div>
    <table class="w-full" id="example">
      <thead>
        <tr>
          <th>Kategori Başlığı</th>
          <th>Üst Kategori</th>
          <th>Kategori Durumu</th>
          <th>Kategori Sıralama</th>
          <th>İşlem</th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
          <tr>
            <td>
              <div class="product-box flex items-center">
                <div class="product-box-image">
                  {% if category.category_image %}
                    <a class="block" href="#">
                      <img src="/uploads/{{ category.category_image }}" alt="" />
                    </a>
                  {% endif %}
                </div>
                <div class="product-box-content">
                  <span class="block">{{ category.category_title }}</span>
                </div>
              </div>
            </td>
            <td>{{ category.category_parent }}</td>
            <td>{{ category.category_status|raw }}</td>
            <td>{{ category.category_order }}</td>
            <td>
             <div class="process-buttons flex">
              <a class="focus:outline-none" href='{{ base_url("admin/categories/edit/#{ category.category_id }") }}'>
                <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                </svg>
              </a>
              <a class="focus:outline-none" href='{{ base_url("admin/categories/delete/#{ category.category_id }") }}'>
                <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  <line x1="10" y1="11" x2="10" y2="17"></line>
                  <line x1="14" y1="11" x2="14" y2="17"></line>
                </svg>
              </button>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
</div>