<header class="header flex items-center justify-between mb-6">
  <div class="header-left">
    <div class="back-next">
      <ul class="flex">
        <li>
          <button class="focus:outline-none">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
        </li>
        <li>
          <button class="focus:outline-none">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </li>
      </ul>
    </div>
  </div>
  <div class="header-right">
    <div class="user-action">
      <ul class="flex items-center">
        <li>
          <a class="block" href="javascript:void(0);">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
            </svg>
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>
<div class="dashboard">
  <div class="dashboard-header flex items-start justify-between" style="align-items: center;">
    <div class="dashborad-header-text">
      <h1>{{ page_title }}</h1>
      {# <p>Engin Admin Panel'e Hoşgeldin</p> #}
    </div>
  </div>
  <div class="flex items-start mt-6">
    <div class="area w-full">
      <form action="#" method="post" enctype="multipart/form-data">
        <div class="area-header">
          <div class="area-title">
            <h3>Kategori Düzenleme Formu</h3>
            {# <p>This information will be displayed publicly so be careful what you share.</p> #}
          </div>
        </div>
        <div class="area-content">
          <div class="form-group flex flex-wrap">
            <div class="form-element w-full">
              <label class="block" for="category_parent">Üst Kategori</label>
              <select class="select2-area" id="category_parent" name="category_parent" data-placeholder="Üst Kategori Yok">
                <option></option>
                {% for category in categories %}
                  <option {% if category.category_id == cat.category_parent %}selected="selected"{% endif %} value="{{ category.category_id }}">{{ category.category_title }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-element w-full">
              <label class="block" for="category_title">Kategori Adı</label>
              <input type="text" id="category_title" value="{{ cat.category_title }}" name="category_title">
            </div>
            <div class="form-element w-full">
              <label class="block" for="category_description">Kategori Açıklaması</label>
              <textarea id="category_description" name="category_description">{{ cat.category_description }}</textarea>
              <p>HTML kodu kullanmayın.</p>
            </div>
            <div class="form-element w-full">
              <label class="block" for="photo">Resim</label>
              <div class="form-group flex items-center">
                <div class="form-element">
                  <div class="avatar"><img class="imgshow" src="{{ base_url("uploads/#{cat.category_image}") }}" alt=""></div>
                </div>
                <div class="form-element">
                  <div class="file-input-with-button">
                    <label class="block">
                      <input class="imgload" name="category_image" type="file"><span class="block">Değiştir</span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-element w-full">
              <label class="block" for="category_order">Kategori Sıralaması</label>
              <input type="text" id="category_order" value="{{ cat.category_order }}" name="category_order">
            </div>
            <div class="form-element w-full">
              <label class="block" for="about">Aktif / Pasif</label>
              <ul>
                <li>
                  <div class="horizontal-check">
                    <label class="flex">
                      <input type="checkbox" {% if cat.category_status == 1 %}checked="checked"{% endif %} name="category_status" value="1"><span class="block horizontal-check-area relative"><span class="block horizontal-check-icon"></span></span>
                    </label>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="area-footer bg-grey">
          <div class="form-group flex justify-end">
            <div class="form-element flex">
              <button class="focus:outline-none">İptal Et</button>
              <button type="submit" class="button-first focus:outline-none">Kaydet</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
<script>
$(document).ready(function() {
  $("form").on("submit", function(e) {
    e.preventDefault();
    var form = $(this);
    var data = new FormData(this);
    $.ajax({
      url: "{{ base_url("admin/categories/edit/#{cat.category_id}") }}", 
      type: "POST",             
      data: new FormData(this),
      contentType: false,       
      cache: false,             
      processData:false, 
      success: function(res) {
        if(res.status) {
          Swal.fire({
            html: `<div class="notify">
            <div class="notify-box flex items-start">
            <div class="notify-icon">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            </div>
            <div class="notify-content">
            <span class="block">İşleminiz başarıyla tamamlandı!</span>
            <p>Kategori başarıyla düzenlendi.</p>
            </div>
            <div class="notify-close">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
            </div>
            </div>
            </div>`,
            position: "top-end",
            showConfirmButton: false,
            timer: 3000,
            showClass: {
              popup: 'animate__animated animate__fadeInRight'
            },
            hideClass: {
              popup: 'animate__animated animate__fadeOutRight'
            }
          });
        }else {
          Swal.fire({
            html: `<div class="notify">
            <div class="notify-box flex items-start">
            <div class="notify-icon">
            </div>
            <div class="notify-content">
            <span class="block">Hata!</span>
            ${res.message}
            </div>
            <div class="notify-close">
            <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
            </div>
            </div>
            </div>`,
            position: "top-end",
            showConfirmButton: false,
            timer: 3000,
            showClass: {
              popup: 'animate__animated animate__fadeInRight'
            },
            hideClass: {
              popup: 'animate__animated animate__fadeOutRight'
            }
          });
        }
      }
    });
  })
});
</script>